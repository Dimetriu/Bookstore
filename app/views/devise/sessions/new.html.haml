%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log In
    = link_to user_facebook_omniauth_authorize_path, class: 'general-login-icon' do
      %i.fa.fa-facebook-official
    %p.general-login-text or
  .general-form
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group.mb-30
        = f.input :email, required: false, autofocus: true, placeholder: 'email', id: 'email', input_html: { class: 'form-control control-label input-label' }
      .form-group.mb-30
        = f.input :password, required: false, placeholder: 'password', id: 'password', input_html: { class: 'form-control control-label input-label' }
        = render 'devise/shared/recoverable'
        = render 'devise/shared/confirmable'
        = render 'devise/shared/rememberable'
      .text-center
        = back_to_store_button({ class: 'btn btn-default mb-20' })
        = render 'devise/shared/registerable'