%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign Up
    = link_to user_facebook_omniauth_authorize_path, class: 'general-login-icon' do
      %i.fa.fa-facebook-official
    %p.general-login-text or
  .general-form
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.error_notification
      .form-group.mb-30
        = f.input :email, required: false, autofocus: true, placeholder: 'Enter Email', id: 'email', input_html: { class: 'form-control control-label input-label' }
      .form-group.mb-30
        = f.input :password, required: true, placeholder: 'Password', id: 'password', input_html: { class: 'form-control control-label input-label' }
        = f.input :password_confirmation, required: true, placeholder: 'Confirm Password', id: 'password', input_html: { class: 'form-control control-label input-label' }
        = render 'devise/shared/recoverable'
      .text-center
        = link_to 'Sign Up', new_user_registration_url, { class: 'btn btn-default mb-20' }
        -# = back_to_store_button({ class: 'btn btn-default mb-20' })
        -# = render 'devise/shared/registerable'
        %p.general-sign-text.text-center
          Have an Account? 
          = link_to "Sign up", new_registration_path(resource_name), {class: 'in-gold-500' } if devise_mapping.registerable? && controller_name != 'registrations' 
          = render "devise/shared/links"