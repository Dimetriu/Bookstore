%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Sign up
  .general-form
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification
      .form-group.mb-30
        = f.input :email, required: false, autofocus: true, placeholder: 'email', id: 'email', input_html: { class: 'form-control control-label input-label' }
      .form-group.mb-30
        = f.input :password, required: true, placeholder: 'password', id: 'password', input_html: { class: 'form-control control-label input-label' }
        = f.input :password_confirmation, required: true, placeholder: 'confirm password', id: 'password', input_html: { class: 'form-control control-label input-label' }
      .text-center
        %button.btn.btn-default.mb-20 Sign up
        %br/
        = render "devise/shared/links"
