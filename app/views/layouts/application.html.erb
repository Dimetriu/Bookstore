<!DOCTYPE html>
<html>
  <head>
    <title>Bookstore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash-#{name}" %>
    <% end %>
    
    <%= yield %>
  </body>
</html>
