%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Set new password
  %form.general-form
  = simple_form_for(@user, url: { action: "update_password" }) do |f|
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token
    .form-group.mb-30
      = f.input :password, label: "Type a new Password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'form-control label control-label input-label', id: 'password'
    .form-group.mb-40
      = f.input :password_confirmation, label: "Confirm Password", required: true, class: 'form-control label control-label input-label', id: 'confirmPassword'
      = f.button :submit, "Change", class: 'btn btn-default center-block mb-20'